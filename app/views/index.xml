<Alloy>
	<Window id="index" class="container" onOpen="init">
		<ListView id="lvEntries" layout="vertical">
    		<Templates>
				<Require src="templates/img"></Require>
    		</Templates>

    		<ListSection id="section" dataCollection="entry">
				<ListItem
					template="img"
					title:text="{title}"
					subtitle:text="{subtitle}"
					image:image="{image}"
				/>
    		</ListSection>
    	</ListView>
	</Window>
</Alloy>